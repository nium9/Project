<MenuPage>:
    BoxLayout:
        size: root.size
        BoxLayout:
            orientation:'vertical'
            rows:4
            Image:
                source: 'Data/placeholder.jpg'
                size: self.texture_size
            Label:
                text:'0'
                id:song_name
            ProgressBar:
		        id: load_bar
		        max: 100# i think to set max
		        value: 0
            GridLayout:
                cols:3
                Button:
                    text:'Previous'
                    on_press:root.play_next_previous(-1,'notNatual',0)
                    size: 75, 50
                Button:
                    id:instance
                    text:'Play'
                    on_press:root.plays_or_stop(self)
                    size: 75, 50
                Button:
                    text:'Next'
                    on_press:root.play_next_previous(1,'notNatual',0)
                    size: 75, 50
